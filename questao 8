#include <stdio.h>
#include <stdlib.h>
#include <locale.h>


int resultado (int num) {
  int fat;
  for(fat = 1 ; num > 1 ; num = num - 1){
    fat = fat * num;
  }
  return fat;
  
}

int main(){
    setlocale(LC_ALL,"Portuguese_Brazil");
    int numero, resultante;
    
    printf("informe um valor positivo inteiro: ");
    scanf("%d", &numero);
    
    resultante = resultado (numero);
    
    printf("\n\n O resultado do fatorial %d Ã©: %d", numero,resultante);
    
    return 0;
}
