#include <stdio.h>
#include <stdlib.h>


int valor(int n) {
   int i, soma = 100;
   
   for (i = 0; i < n ; i++) {
   soma = soma + i;
}
   return (soma);
   
 }
 
int main(){
    int num, resultado;
    
    printf("digite o valor de n : ");
    scanf("%d", &num);
    
    resultado = valor(num);
    
    printf("A resposta fica :%d \n ", resultado);
    
return 0;
}
